<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">
	<class name="Player" table="players">
		<id name="id" column="player" unsaved-value="null">
			<generator class="native"/>
		</id>
		
		<property name="uuid" index="playeruuidindex">
			<column name="uuid"/>
		</property>
	
		<property name="firstName">
			<column name="firstname"/>
		</property>
	
		<property name="lastName">
			<column name="lastname"/>
		</property>
	
		<property name="height">
			<column name="height"/>
		</property>
		
		<property name="weight">
			<column name="weight"/>
		</property>
		
		<property name="birthday">
			<column name="birthday"/>
		</property>
	
		<property name="hometown">
			<column name="hometown"/>
		</property>
		
		<property name="autogenerated">
			<column name="autogenerated"/>
		</property>
		
		<many-to-one name="sport" column="sport" class="Sport" not-null="true" />
		
	</class>
</hibernate-mapping>