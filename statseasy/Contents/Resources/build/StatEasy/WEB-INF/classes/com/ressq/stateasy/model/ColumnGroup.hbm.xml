<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">
	<class name="ColumnGroup" table="columnGroups">
		<id name="id" column="columngroup" unsaved-value="null">
			<generator class="native"/>
		</id>
	
		<property name="name">
			<column name="name"/>
		</property>
		
		<property name="startIndex">
			<column name="startIndex"/>
		</property>
		
		<property name="endIndex">
			<column name="endIndex"/>
		</property>
		
		<many-to-one name="parentView" column="statview" class="View" not-null="true" />
		
	</class>
</hibernate-mapping>