<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">
	<class name="Team" table="teams">
		<id name="id" column="team" unsaved-value="null">
			<generator class="native"/>
		</id>
		
		<property name="uuid" index="teamuuidindex">
			<column name="uuid"/>
		</property>
		
		<property name="teamName">
			<column name="teamname"/>
		</property>
		
		<property name="opponent">
			<column name="opponent"/>
		</property>
		
		<property name="autogenerated">
			<column name="autogenerated"/>
		</property>
		
		<bag name="allSeasons" inverse="true" order-by="createdDate desc">
			<key column="team"/>
			<one-to-many class="Season"/>
		</bag>
		
		<many-to-one name="sport" column="sport" class="Sport" not-null="true" />
		
		<property name="createdDate">
			<column name="createdDate"/>
		</property>
		
	</class>
</hibernate-mapping>