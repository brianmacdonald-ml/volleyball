<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">

	<typedef name="VideoSourceType" class="com.ressq.stateasy.model.hibernate.GenericEnumUserType">
		<param name="enumClass">com.ressq.stateasy.model.enums.VideoSourceType</param>
	</typedef>

	<class name="VideoSource" table="videoSources">
		<id name="id" column="videoSource" unsaved-value="null">
			<generator class="native"/>
		</id>
	
		<property name="videoSourceType" type="VideoSourceType">
			<column name="videoSourceType"/>
		</property>
		
		<property name="location">
			<column name="location"/>
		</property>
	
		<property name="filename">
			<column name="filename"/>
		</property>
		
	</class>
</hibernate-mapping>