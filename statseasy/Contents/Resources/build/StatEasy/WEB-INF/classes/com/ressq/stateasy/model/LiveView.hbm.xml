<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">
	<class name="LiveView" table="liveviews">
		<id name="id" column="liveview" unsaved-value="null">
			<generator class="native"/>
		</id>
		
		<property name="uuid" index="liveviewuuidindex">
			<column name="uuid"/>
		</property>
		
		<property name="displayName">
			<column name="displayname"/>
		</property>
	
		<property name="displayOrder">
			<column name="displayorder"/>
		</property>
		
		<property name="className">
			<column name="classname"/>
		</property>
		
		<property name="version">
			<column name="version"/>
		</property>
		
		<property name="contents" type="text">
			<column name="contents"/>
		</property>
		
		<property name="style" type="text">
			<column name="style"/>
		</property>
		
		<property name="displayInVideoReplay">
			<column name="displayInVideoReplay"/>
		</property>
		
		<property name="displayInMediaView">
			<column name="displayInMediaView"/>
		</property>
		
		<property name="displayInPlaylistReplay">
			<column name="displayInPlaylistReplay"/>
		</property>
		
		<many-to-one name="sport" column="sport" class="Sport" not-null="true" />

	</class>
</hibernate-mapping>