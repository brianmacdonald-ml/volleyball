<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.ressq.stateasy.model">
	<class name="SummaryView" table="summaryViews">
		<id name="id" column="summaryView" unsaved-value="null">
			<generator class="native"/>
		</id>
	
		<property name="uuid" index="summaryviewuuidindex">
			<column name="uuid"/>
		</property>
	
		<property name="name">
			<column name="name"/>
		</property>
	
		<property name="defaultView">
			<column name="defaultView"/>
		</property>
	
		<property name="sideBySide">
			<column name="sideBySide"/>
		</property>
		
		<bag name="allEntries" cascade="all-delete-orphan" order-by="entryIndex" inverse="true">
			<key column="summaryView"/>
			<one-to-many class="SummaryViewEntry"/>
		</bag>
		
		<many-to-one name="sport" column="sport" class="Sport" not-null="true" />
		
	</class>
</hibernate-mapping>