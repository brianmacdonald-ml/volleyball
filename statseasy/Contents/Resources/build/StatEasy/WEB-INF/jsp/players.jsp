<%@ page session="false"%>
<%@ taglib prefix="form"    uri="http://www.springframework.org/tags/form" %>
<%@ taglib prefix="c" 		uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="se"      uri="/WEB-INF/tld/statEasy.tld" %>
<%@ taglib prefix="fmt" 	uri="http://java.sun.com/jsp/jstl/fmt" %>

<%@ include file="/WEB-INF/jsp/header.jsp" %>

<%@ include file="/WEB-INF/jsp/configurationNavigation.jsp" %>

<script type="text/javascript" src="/js/encoder.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/common.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/jquery.metadata.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/jquery.tablesorter.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/stickyheaders.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/jquery.plugins/jquery.cookie.js?sv=${serverVersion}"></script>
<link rel="stylesheet" href="/css/tableSort.css?sv=${serverVersion}" type="text/css">

<script type="text/javascript">
$(document).ready(function () {
	$(".tablesorter").tablesorter({
		sortList: [[1, 0]],
		headers: {  
            2: { // Third column, no sorting 
                sorter: false 
            },
		}
	}).stickyHeaders();
});
</script>

<div id="content"><div id="innercontent">
<div class="middle">
<!-- 
	Team section 
-->
<h2 class="titleBorder borderBelow">Players:</h2>

<table class="striped forNow tablesorter stickyHeaderTable" id="playerTable">
  <thead>
	<tr>
	  <th>First</th>
	  <th>Last</th>
	  <th>Actions</th>
	</tr>
  </thead>
  <tbody>
  <c:forEach items="${allPlayers}" var="player" varStatus="playerCounter">
  <c:choose>
  	<c:when test="${player.autogenerated}">
  	  <tr class="autogenerated">
  	</c:when>
  	<c:otherwise>
	  <tr>
  	</c:otherwise>
  </c:choose>
	  <td>${player.firstName}</td>
	  <td>${player.lastName}</td>
	  <td>
	  	<a href="/configure/player.htm?id=${player.id}">Edit</a>
	  	| <a href="/configure/player.htm?action=delete&id=${player.id}">Delete</a>
	  </td>
	</tr>
  </c:forEach>
  </tbody>
  <tr class="thebottomrow">
  	<td colspan="3"><a href="/configure/player.htm">Create a new player</a></td>
  </tr>
</table>

</div>
</div></div>

<script type="text/javascript">
$(document).ready(function () {
	AutogeneratedHider("#playerTable", 6, "players");
});
</script>


<%@ include file="/WEB-INF/jsp/footer.jsp" %>