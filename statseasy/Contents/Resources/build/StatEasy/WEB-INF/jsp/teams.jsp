<%@ page session="false"%>
<%@ taglib prefix="form"    uri="http://www.springframework.org/tags/form" %>
<%@ taglib prefix="c" 		uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="se"      uri="/WEB-INF/tld/statEasy.tld" %>
<%@ taglib prefix="fmt" 	uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ taglib prefix="fn" 		uri="http://java.sun.com/jsp/jstl/functions" %>

<%@ include file="/WEB-INF/jsp/header.jsp" %>

<%@ include file="/WEB-INF/jsp/configurationNavigation.jsp" %>

<script type="text/javascript" src="/js/encoder.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/common.js?sv=${serverVersion}"></script>
<script type="text/javascript" src="/js/jquery.plugins/jquery.cookie.js?sv=${serverVersion}"></script>


<div id="content"><div id="innercontent">
<div class="middle">
<!-- 
	Team section 
-->
<h2 class="titleBorder borderBelow"><a href="/configure/teams.htm?sportSelect=true" onclick='$.cookie("sport", "", { path : "/"})'>${sportName}</a> Teams:</h2>
    
<table class="striped forNow" id="mainTable">
  <thead>
  <tr>
    <th>Name</th>
	<th>Action</th>
  </tr>
  </thead>
  <tbody>
  <c:forEach items="${allTeams}" var="team" varStatus="teamCounter">
	  <c:set var="cssClass" value=""/>
	  <c:if test="${team.autogenerated}">
	  	<c:set var="cssClass" value="class='autogenerated'" />
	  </c:if>
	  <tr ${cssClass}>
		  <td>${team.teamName}</td>
		  <td>
		  	<a href="/configure/team.htm?id=${team.id}">Edit</a>
		  	| <a href="/configure/team.htm?action=delete&id=${team.id}">Delete</a>
		  	| <a href="/teamAndSeasonSetup.htm">Create a new season</a>
		  </td>
	  </tr>
	  <c:forEach items="${team.allSeasons}" var="season">
	  	<tr ${cssClass}>
		  	<td style="padding-left: 40px">${season.name} (${season.headCoach} & ${season.assistantCoach})</td>
		  	<td>
		  		<a href="/configure/seasonForm.htm?id=${season.id}">Edit</a>
		  		| <a href="/configure/seasonForm.htm?action=delete&id=${season.id}">Delete</a>
		  	</td>
		</tr>
	  </c:forEach>
			
  </c:forEach>
  <tr class="thebottomrow">
  	<td colspan="3">
	  	<a href="/teamAndSeasonSetup.htm">Create a new team</a>
	</td>
  </tr>
  </tbody>
</table>

</div>
</div></div>

<script type="text/javascript">
$(document).ready(function () {
	AutogeneratedHider("#mainTable", 3, "teams");
});
</script>


